\begin_inset Formula $D\left(\tau_{0}\right)=P^{2}.Q\left(\tau_{0}\right)=P^{2}.R^{2}\left(\tau_{0}\right)$
\end_inset

, then
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
x=\frac{\frac{-2a.4\left(a^{2}+1\right)t}{t^{2}+4\left(a^{2}+1\right)}+P.R\left(\tau_{0}\right)}{2\left(a^{2}+1\right)}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
x=\frac{\frac{-2a.4\left(a^{2}+1\right)t}{t^{2}+4\left(a^{2}+1\right)}+2\frac{\sqrt{\left(a^{2}+1\right)}\left(t^{2}-4\left(a^{2}+1\right)\right)}{t^{2}+4\left(a^{2}+1\right)}}{2\left(a^{2}+1\right)}
\]

\end_inset


\end_layout

